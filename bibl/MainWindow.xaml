<Window x:Class="bibl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bibl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="dataTextBox" Width="200" Margin="0 0 0 10"/>
            <Button Content="Сереализация/Десереализация" Width="200" Click="Button_Click"/>
            <Button Content="Тёмный" Width="200" Click="DarkThemeButton_Click"/>
            <Button Content="Светлый" Width="200" Click="LightThemeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
